type Food {
  id: ID! @unique @id
  name: String!
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
}

type Ingredient {
  id: ID! @unique @id
  amount: Int
  measure: Measure!
  food: Food!
}

type Recipe {
  id: ID! @unique @id
  name: String!
  ingredients: [Ingredient!]!
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
}

type StoredFood {
  id: ID! @unique @id
  food: Food!
  validThru: String!
}

type Space {
  id: ID! @unique @id
  name: String!
  storeAs: StorageMethod!
  foods: [StoredFood!]!
  icon: String
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
}

enum StorageMethod {
  FROZEN
  COLD
  NATURAL
}

enum Measure {
  ML
  GRAM
}
